            <input type="password" id="AdminPassword" name="password" required>

            <button type="submit" name="Signin">Login</button>

            <div class="forgot-password">
                <a href="#" id="forgotPasswordLink">Forgot Password?</a>
            </div>
         </form>
    </div>

    </body>
</html>
